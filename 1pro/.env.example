# Environment configuration for Ocean Hazard Analysis System
# Copy this file to .env and customize the values

# YouTube API Configuration (Optional)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Database Configuration (for production profile)
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=hazard_db
POSTGRES_USER=hazard_user

# Redis Configuration (for caching profile)
REDIS_URL=redis://redis:6379/0

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# External API Configuration
INCOIS_API_TIMEOUT=30
TWITTER_RATE_LIMIT=10
YOUTUBE_RATE_LIMIT=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker Configuration
COMPOSE_PROJECT_NAME=ocean-hazard-system