# Ocean Hazard Prediction System Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
MONGODB_URI=mongodb://admin:${MONGO_ROOT_PASSWORD}@mongo:27017/ocean_hazard_db?authSource=admin
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Database Passwords (CHANGE THESE!)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=ocean_hazard_db
REDIS_PASSWORD=your_secure_redis_password_here

# Service Passwords (CHANGE THESE!)
GRAFANA_PASSWORD=your_secure_grafana_password_here
JUPYTER_TOKEN=your_secure_jupyter_token_here

# External API Keys (replace with actual keys)
WEATHER_API_KEY=your_weather_api_key_here
EARTHQUAKE_API_KEY=your_earthquake_api_key_here
SOCIAL_MEDIA_API_KEY=your_social_media_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
NOAA_API_KEY=your_noaa_api_key_here
USGS_API_KEY=your_usgs_api_key_here

# Email Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@oceanhazard.system

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30

# SMS Configuration (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_KEY_SALT=your_api_key_salt_here

# Model Configuration
MODEL_UPDATE_INTERVAL=86400  # 24 hours in seconds
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.6
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.9

# Alert Configuration
MAX_ALERTS_PER_HOUR=10
ALERT_COOLDOWN_MINUTES=30
ENABLE_EMAIL_ALERTS=true
ENABLE_WEBHOOK_ALERTS=true
ENABLE_SMS_ALERTS=false

# Data Collection Configuration
DATA_COLLECTION_INTERVAL=3600  # 1 hour in seconds
HISTORICAL_DATA_RETENTION_DAYS=365
SENSOR_DATA_RETENTION_DAYS=30
ALERT_DATA_RETENTION_DAYS=90

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
DATABASE_POOL_SIZE=20

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_PROFILING=false
LOG_SQL_QUERIES=false