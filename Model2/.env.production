# Production Disaster Management System - Environment Configuration
# Copy this file to .env and update values for your deployment

# Application Settings
APP_NAME="Disaster Management System"
APP_VERSION="1.0.0"
APP_ENV="production"
DEBUG=false
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# Database Configuration (Optional - for persistent storage)
DATABASE_URL="postgresql://disaster_user:secure_password@postgres:5432/disaster_mgmt"
POSTGRES_PASSWORD="secure_password_change_me_in_production"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://redis:6379/0"
CACHE_DURATION=300

# External Services (Optional - if using real APIs)
WEATHER_API_KEY=""
NEWS_API_KEY=""
TWITTER_BEARER_TOKEN=""

# ML Model Settings
NLP_MODEL_PATH="./models/nlp_classifier"
ANOMALY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8
ML_CACHE_DURATION=3600

# Geographic Settings
DEFAULT_REGION="India"
SUPPORTED_STATES="Tamil Nadu,Kerala,Karnataka,Andhra Pradesh,Odisha,West Bengal,Gujarat,Maharashtra,Goa"

# Performance Settings
MAX_CONCURRENT_SCRAPERS=3
REQUEST_TIMEOUT=30
MAX_WORKERS=4
RATE_LIMIT_PER_MINUTE=60

# Security Settings (Production)
SECRET_KEY="your-secret-key-change-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT="json"
LOG_FILE_PATH="./logs/disaster_mgmt.log"
MAX_LOG_SIZE="100MB"
LOG_RETENTION_DAYS=30

# Docker Compose Profiles
COMPOSE_PROFILES="production,monitoring"

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Alerts & Notifications
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=""
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=""
ALERT_EMAIL_PASSWORD=""
ALERT_EMAIL_TO=""

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=5

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH="./nginx/ssl/cert.pem"
SSL_KEY_PATH="./nginx/ssl/key.pem"