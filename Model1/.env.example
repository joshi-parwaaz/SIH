# Example environment configuration
# Copy this file to .env and update the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration
MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=ocean_hazard_platform

# Model Configuration
MODEL_ENV=development
TORCH_DEVICE=cpu
# Set to 'cuda' if GPU available

# Security
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password

# External API Keys (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Geolocation Service
NOMINATIM_USER_AGENT=ocean_hazard_platform

# Anomaly Detection Thresholds
ANOMALY_DETECTION.SPATIAL_CLUSTERING.EPS_KM=5.0
ANOMALY_DETECTION.SPATIAL_CLUSTERING.MIN_SAMPLES=3
ANOMALY_DETECTION.TEMPORAL.VOLUME_THRESHOLD_STD=2.5

# Feedback System
FEEDBACK.RETRAINING.ACCURACY_THRESHOLD=0.85
FEEDBACK.RETRAINING.FEEDBACK_COUNT_THRESHOLD=100